# GoMafia Analytics Data Collection Service Environment Configuration

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_service_role_key
SUPABASE_SECRET=your_supabase_secret

# Database Configuration (for direct PostgreSQL access if needed)
DATABASE_URL=postgresql://username:password@host:port/database
DIRECT_URL=postgresql://username:password@host:port/database

# GoMafia.pro Scraping Configuration
GOMAFIA_BASE_URL=https://gomafia.pro
SCRAPING_DELAY_MIN=1
SCRAPING_DELAY_MAX=3
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Selenium WebDriver Configuration (for dynamic content)
WEBDRIVER_PATH=/usr/local/bin/chromedriver
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30

# Scheduling Configuration
COLLECTION_SCHEDULE_CRON=0 */6 * * *  # Every 6 hours
TOURNAMENT_SCHEDULE_CRON=0 8,20 * * *  # Daily at 8 AM and 8 PM
LEADERBOARD_SCHEDULE_CRON=0 */2 * * *  # Every 2 hours

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/data_collection.log
SENTRY_DSN=your_sentry_dsn_url

# Data Processing Configuration
BATCH_SIZE=100
MAX_PARALLEL_REQUESTS=5
DATA_VALIDATION_STRICT=true

# Development Configuration
DEVELOPMENT_MODE=true
DEBUG_SCRAPING=false
SAVE_RAW_HTML=false 